<%= vite_javascript_tag 'workspace_show_vue' %>

<%= javascript_tag do %>
  window.workspaceId = <%= @workspace.id.to_json.html_safe %>;
<% end %>

<div class="workspace-name">
  <%= @workspace.name %><span style="font-size: 20px"> by <%= @workspace.made_by %></span>
</div>
<div class="workspace-main">
  <div class="sorting-sheet">仕分け表</div>
  <div class="loading-sheet">積込み表</div>
  <div class="workspace-explanation">
    ワークスペースの説明：<br>
    <%= @workspace.explanation %><br><br>
    <%= @workspace.user_role(current_user.id) %><br>
    ユーザー一覧 : <br>
    <div class="workspace-users">
      <% @workspace.users.each do |user| %>
        <div class="workspace-user">
          <div class="user-name">
            <%= user[:user].name %>
          </div>
          <div class="user-role">
            <%= user[:role].name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="buttons">
    <div id="add-user-btn">ユーザーを追加する</div>
    <div id="edit-btn">編集する</div>
  </div>
</div>
