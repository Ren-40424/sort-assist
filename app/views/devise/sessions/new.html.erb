<div class="users-wrapper">
  <h1 class="users-logo">Sort-Assist</h1>
  <div class="users-form">
    <div class="users-form__title ">
      ログイン
    </div>
    
    <%= form_with model: @user, url: user_session_path, class: 'users-form__main', local: true, data: { turbo: false } do |f|%>

      <div class="form-container">
        <%= f.email_field :email, autofocus: true , class: 'input', placeholder: 'メールアドレスを入力してください' %>
        <%= f.label :email %>
      </div>

      <div class="form-container">
        <%= f.password_field :password,  class: 'input', placeholder: 'パスワードを入力してください' %>
        <%= f.label :password %>
      </div>

      <%= f.submit 'ログイン', class: 'submit-btn' %>

      
    <% end %>
  </div>

  <div class="sign-in-up">
    アカウントをお持ちでない方は：
    <%= link_to '新規登録', new_user_registration_path, class: 'page-link' %>
  </div><br>
  <div class="error-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
</div>